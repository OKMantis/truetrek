<div class="camera-new-page" data-place-id="<%= params[:place_id] %>">
  <section class="camera-page-header">
    <div class="camera-page-header-content">
      <h1 class="camera-page-title">Capture a Moment</h1>
      <% if params[:place_id].present? %>
        <% place = Place.find_by(id: params[:place_id]) %>
        <p class="camera-page-subtitle">Add a photo to <%= place&.title || "this place" %></p>
      <% else %>
        <p class="camera-page-subtitle">Take a photo to create a place or add to an existing one</p>
      <% end %>
    </div>
  </section>

  <section class="camera-form-section">
    <div class="container">
      <div class="camera-form-wrapper">
        <div class="camera-form-card">
          <video id="camera-video" autoplay playsinline class="camera-video mb-3"></video>
          <canvas id="camera-canvas" style="display:none;"></canvas>

          <div id="photo-preview" class="d-none">
            <img id="preview-image" class="camera-photo-preview w-100 mb-3" alt="Photo preview">
          </div>

          <div class="d-grid gap-2" id="camera-controls">
            <button type="button" id="take-photo" class="btn btn-primary btn-lg">
              <i class="fa-solid fa-camera"></i> Capture Photo
            </button>
          </div>

          <div id="action-buttons" class="d-grid gap-2 mt-3 d-none">
            <button type="button" class="btn btn-success btn-lg" id="looks-great">
              <i class="fa-solid fa-check"></i> Looks Great
            </button>
            <button type="button" class="btn btn-outline-secondary" id="retake-photo">
              <i class="fa-solid fa-redo"></i> Retake Photo
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
