<div class="place-new-page">
  <!-- Hero Header -->
  <section class="place-header place-new-header">
    <div class="place-header-content">
      <h1 class="place-title">Create a New Place</h1>
      <p class="place-header-subtitle">Share your discovery with other travelers</p>
    </div>
  </section>

  <div class="container">
    <!-- Form Section -->
    <section class="place-form-section">
      <div class="place-form-wrapper">
        <div class="place-form-card">
          <%= form_with model: @place, local: true, html: { class: "place-form" } do |f| %>
            <div data-controller="place-autocomplete">
              <!-- Place Name -->
              <div class="form-section">
                <h3 class="form-section-title">
                  <i class="fa-solid fa-location-dot"></i>
                  Place Details
                </h3>

                <div class="form-field">
                  <%= f.label :city_id, "City", class: "styled-label" %>
                  <%= f.collection_select :city_id, City.all, :id, :name,
                        { selected: @place.city_id, prompt: "Select a city" },
                        { class: "styled-select", data: { place_autocomplete_target: "citySelect", action: "change->place-autocomplete#cityChanged" } } %>
                  <% if @auto_city.present? %>
                    <p class="form-hint">
                      <i class="fa-solid fa-circle-info"></i> Auto-selected from your location: <strong><%= @auto_city.name %></strong>
                    </p>
                  <% end %>
                </div>

                <div class="form-field">
                  <%= f.label :title, "Place Name", class: "styled-label" %>
                  <div class="geocoder-container" data-place-autocomplete-target="geocoderContainer" style="position: relative;">
                    <%= f.text_field :title,
                        value: @place.title,
                        placeholder: "Type to search or enter place name",
                        class: "styled-input",
                        data: { place_autocomplete_target: "titleInput" } %>
                  </div>
                  <p class="form-hint" data-place-autocomplete-target="hint">
                    <i class="fa-solid fa-circle-info"></i> Start typing to see suggestions or enter manually
                  </p>
                </div>

                <div class="form-field">
                  <%= f.label :address, class: "styled-label" %>
                  <%= f.text_field :address,
                      value: @place.address,
                      placeholder: "Enter address or it will be auto-filled from place search",
                      class: "styled-input",
                      data: { place_autocomplete_target: "address" } %>
                  <% if @place.address.present? %>
                    <p class="form-hint">
                      <i class="fa-solid fa-circle-info"></i> Auto-filled from photo location
                    </p>
                  <% end %>
                </div>

                <%= f.hidden_field :latitude, value: @place.latitude, data: { place_autocomplete_target: "latitude" } %>
                <%= f.hidden_field :longitude, value: @place.longitude, data: { place_autocomplete_target: "longitude" } %>
              </div>
            </div>

            <div class="form-divider"></div>

            <!-- Description -->
            <div class="form-section">
              <h3 class="form-section-title">
                <i class="fa-solid fa-pen-to-square"></i>
                Description
              </h3>

              <div class="form-field">
                <%= f.label :enhanced_description, "Tell us about this place", class: "styled-label" %>
                <%= f.text_area :enhanced_description, rows: 5, placeholder: "Describe what makes this place special...", class: "styled-textarea" %>
                <p class="form-hint">Help other travelers understand why this place is worth visiting</p>
              </div>
            </div>

            <div class="form-divider"></div>

            <!-- Photo Preview -->
            <% if @camera_blob_id.present? %>
              <div class="form-section">
                <h3 class="form-section-title">
                  <i class="fa-solid fa-image"></i>
                  Photo from Camera
                </h3>

                <div class="camera-photo-preview-section">
                  <%= image_tag url_for(ActiveStorage::Blob.find_signed(@camera_blob_id)),
                                class: "camera-photo-preview-img" %>
                  <%= f.hidden_field :camera_blob_id, value: @camera_blob_id %>
                </div>
              </div>

              <div class="form-divider"></div>
            <% end %>

            <!-- Submit -->
            <div class="form-actions">
              <%= f.submit "Create Place", class: "btn-submit-form" %>
            </div>
          <% end %>
        </div>
      </div>
    </section>
  </div>
</div>
