<div class="container">
  <h1>Places in <%= @city.name %></h1>

  <%= form_with url: city_places_path(@city), method: :get, local: true, class: "mb-4" do |f| %>
    <div class="input-group">
      <%= f.text_field :query, value: params[:query], class: "form-control", placeholder: "Search places..." %>
      <%= f.submit "Search", class: "btn btn-primary" %>
      <% if params[:query].present? %>
        <%= link_to "Clear", city_places_path(@city), class: "btn btn-outline-secondary" %>
      <% end %>
    </div>
  <% end %>

  <div class="cards">
    <% @places.each do |place| %>
      <%= link_to city_place_path(place.city, place) do %>
        <% if place.default_img_url %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path place.default_img_url %>)">
            <%= place.title %>
          </div>
        <% else %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path place.comments.first.photos.first.key, height: 300, crop: :fill %>)">
            <%= place.title %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <% if @places.empty? && params[:query].present? %>
    <p class="text-muted">No places found for "<%= params[:query] %>"</p>
  <% end %>
</div>
