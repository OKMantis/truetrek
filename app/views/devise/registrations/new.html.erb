<div class="auth-page">
  <div class="auth-phone-shell">
    <div class="auth-card">
      <header class="auth-header">
        <div class="auth-title-row">
          <span class="auth-title-main">Sign Up</span>
          <span class="auth-title-slash">/</span>
          <span class="auth-title-muted">
            <%= link_to "Log In", new_session_path(resource_name), class: "auth-title-link" %>
          </span>
        </div>
        <p class="auth-subtitle">Good to see you here for the first time!</p>
      </header>

      <%= simple_form_for(resource,
                          as: resource_name,
                          url: registration_path(resource_name),
                          html: { class: "auth-form" }) do |f| %>

        <%= f.error_notification %>

        <div class="auth-field-group">
          <%= f.label :username, "Username", class: "auth-label" %>
          <%= f.input :username,
                      label: false,
                      required: true,
                      autofocus: true,
                      input_html: {
                        class: "auth-input-field",
                        placeholder: "Your display name"
                      } %>
        </div>

        <div class="auth-field-group">
          <%= f.label :city, "City", class: "auth-label" %>
          <%= f.input :city,
                      label: false,
                      required: true,
                      input_html: {
                        class: "auth-input-field",
                        placeholder: "Where are you from?"
                      } %>
        </div>

        <div class="auth-field-group">
          <%= f.label :email, "Email", class: "auth-label" %>
          <%= f.input :email,
                      label: false,
                      required: true,
                      input_html: {
                        autocomplete: "email",
                        class: "auth-input-field"
                      } %>
        </div>

        <div class="auth-field-group" data-controller="password-visibility">
          <%= f.label :password, "Password", class: "auth-label" %>

          <% if @minimum_password_length %>
            <p class="auth-hint">
              <%= @minimum_password_length %> characters minimum
            </p>
          <% end %>

          <%= f.input :password,
                      label: false,
                      required: true,
                      input_html: {
                        autocomplete: "new-password",
                        class: "auth-input-field",
                        data: { password_visibility_target: "input" }
                      } %>

          <%= f.label :password_confirmation, "Confirm password", class: "auth-label" %>
          <%= f.input :password_confirmation,
                      label: false,
                      required: true,
                      input_html: {
                        autocomplete: "new-password",
                        class: "auth-input-field",
                        data: { password_visibility_target: "input" }
                      } %>
          <div class="auth-show-password">
            <label class="auth-checkbox-label">
              <input type="checkbox" data-action="change->password-visibility#toggle">
              <span>Show password</span>
            </label>
          </div>
        </div>

        <div class="auth-actions">
          <%= f.button :submit, "Sign up", class: "auth-primary-btn" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
