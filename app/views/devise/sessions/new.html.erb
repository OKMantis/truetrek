<div class="auth-page">
  <div class="auth-phone-shell">
    <div class="auth-card">
      <header class="auth-header">
        <div class="auth-title-row">
          <span class="auth-title-muted"><%= link_to "Sign up", new_registration_path(resource_name) %></span>
          <span class="auth-title-slash">/</span>
          <span class="auth-title-main">Log In</span>
        </div>
        <p class="auth-subtitle">Good to see you back!</p>
      </header>

      <%= simple_form_for(resource,
                          as: resource_name,
                          url: session_path(resource_name),
                          html: { class: "auth-form" }) do |f| %>

        <div class="auth-field-group">
          <%= f.label :email, "Email/Username", class: "auth-label" %>
          <%= f.input :email,
                      label: false,
                      required: false,
                      autofocus: true,
                      input_html: {
                        autocomplete: "email",
                        class: "auth-input-field"
                      } %>
        </div>

        <div class="auth-field-group" data-controller="password-visibility">
          <%= f.label :password, "Password", class: "auth-label" %>
          <%= f.input :password,
                      label: false,
                      required: false,
                      input_html: {
                        autocomplete: "current-password",
                        class: "auth-input-field",
                        data: { password_visibility_target: "input" }
                      } %>
          <div class="auth-show-password">
            <label class="auth-checkbox-label">
              <input type="checkbox" data-action="change->password-visibility#toggle">
              <span>Show password</span>
            </label>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="auth-remember-row">
            <%= f.input :remember_me,
                        as: :boolean,
                        label: "Remember me",
                        inline_label: false,
                        wrapper_html: { class: "auth-remember-wrapper" } %>
          </div>
        <% end %>

        <div class="auth-actions">
          <%= f.button :submit, "Log in", class: "auth-primary-btn" %>
        </div>
      <% end %>

      <div class="auth-footer-links">
        <%= link_to "Forgot your password?", new_password_path(resource_name) %>
      </div>
    </div>
  </div>
</div>
